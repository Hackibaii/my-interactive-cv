    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const hamburger = document.getElementById('hamburger');
            const mobileMenu = document.getElementById('mobile-menu');
            hamburger.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Close mobile menu on link click
            document.querySelectorAll('#mobile-menu a').forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                });
            });

            // Navigation scroll highlighting
            const sections = document.querySelectorAll('section, footer');
            const navLinks = document.querySelectorAll('#nav-menu a, #mobile-menu a');

            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    const sectionHeight = section.clientHeight;
                    if (pageYOffset >= (sectionTop - sectionHeight / 3)) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').substring(1) === current) {
                        link.classList.add('active');
                    }
                });
            });


            // Chart.js Configuration
            const chartOptions = {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        beginAtZero: true,
                        max: 10,
                        grid: {
                            color: '#e7e5e4' // stone-200
                        },
                        ticks: {
                            color: '#57534e' // stone-600
                        }
                    },
                    y: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            color: '#44403c', // stone-700
                            font: {
                                weight: 'bold'
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: '#292524', // stone-800
                        titleFont: {
                            size: 14,
                            weight: 'bold'
                        },
                        bodyFont: {
                            size: 12
                        },
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.x !== null) {
                                    label += context.parsed.x + ' / 10';
                                }
                                return label;
                            }
                        }
                    }
                }
            };
            
            // Hard Skills Chart
            const hardSkillsCtx = document.getElementById('hardSkillsChart').getContext('2d');
            new Chart(hardSkillsCtx, {
                type: 'bar',
                data: {
                    labels: ['Video Editing', 'Desain 3D', 'Penjualan Ritel', 'Pelayanan Pelanggan', 'Public Speaking', 'Microsoft Office'],
                    datasets: [{
                        label: 'Tingkat Keahlian',
                        data: [8, 7, 8, 9, 8, 7],
                        backgroundColor: '#14b8a6', // teal-500
                        borderColor: '#0d9488', // teal-600
                        borderWidth: 1,
                        borderRadius: 4
                    }]
                },
                options: chartOptions
            });

            // Soft Skills Chart
            const softSkillsCtx = document.getElementById('softSkillsChart').getContext('2d');
            new Chart(softSkillsCtx, {
                type: 'bar',
                data: {
                    labels: ['Disiplin & Etos Kerja', 'Komunikasi', 'Adaptabilitas', 'Kerja Sama Tim', 'Kepemimpinan'],
                    datasets: [{
                        label: 'Tingkat Keahlian',
                        data: [10, 9, 9, 9, 8],
                        backgroundColor: '#f59e0b', // amber-500
                        borderColor: '#d97706', // amber-600
                        borderWidth: 1,
                        borderRadius: 4
                    }]
                },
                options: chartOptions
            });
        });
    </script>
